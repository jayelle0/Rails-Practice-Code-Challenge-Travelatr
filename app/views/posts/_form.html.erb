<%if flash[:my_errors]%>
<%flash[:my_errors].each do |error|%>
<%= error%>
<% end %>
<%end%> 

<%= form_for @post do |f|%>

<%= f.label "Title"%>
<%= f.text_field :title%>

<%= f.label "Content"%>
<%= f.text_field :content%>
<%= f.label "Likes"%>
<%= f.number_field :likes%>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name%>
<%= f.collection_select :destination_id, Destination.all, :id, :name%>
<%= f.submit%>
<%end %>
 